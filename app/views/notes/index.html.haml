.container
  .row
    - @notes.each do |note|
      .col-md-4
        .card.text-white.bg-primary.mb-3{:style => "max-width: 18rem;"}
          .card-header 
          .card-body
            %h5.card-title 
              = link_to note.title, note
            %p.card-text 
              = sanitize(truncate(note.content, length: 20))
          .card-footer
            %p= time_ago_in_words(note.created_at) + ' ago'

        
  
  
