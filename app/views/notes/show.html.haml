.can
  .row
    .col-md-3
    .col-md-6.note
      %h1= @note.title
      %p= simple_format(@note.content)

      =link_to "Edit", edit_note_path(@note), class: "btn btn-success"
      =link_to "Delete", note_path(@note), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"
    .col-md-3  
     



